    "keywords": ["symfony2", "form", "legacy", "alias"],
    "authors": [
        {
            "name": "Craig Blanchette",
            "email": "craig.blanchette@gmail.com",
            "homepage": "http://isometriks.com"
        }
    ],
    "require": {
        "php": "^5.5.9|^7.0",

        "symfony/form": "^3.0",
        "symfony/framework-bundle": "^3.0"
    },
    "require-dev": {
        "matthiasnoback/symfony-dependency-injection-test": "^0.7.6",
        "phpunit/phpunit": "^4.8"
    },
    "autoload": {
        "psr-4": { "Isometriks\\Bundle\\LegacyFormBundle\\": "src/" }
    }
}
